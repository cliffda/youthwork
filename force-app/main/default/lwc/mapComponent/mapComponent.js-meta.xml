<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Contact Map</masterLabel>
    <description>This map will show all projects near the contact</description>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Contact</object>
            </objects>
            <property label="Proximity" type="Integer" name="proximity" default="5" description="Job proximity radius, in miles"/>
            <property label="List Visibility" name="listVisibility" type="String" datasource="hidden,visible" description="Visibility setting for list of map points" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>